{
  "name": "@data-fair/app-charts",
  "version": "1.2.19",
  "description": "A simple charts application for data-fair",
  "author": "Alban Mouton <alban.mouton@gmail.com>",
  "homepage": "https://data-fair.github.io/3/user-guide-backoffice/charts",
  "scripts": {
    "analyze": "cross-env ANALYZE=true npm run build-dev",
    "dev": "zellij --layout .zellij.kdl",
    "dev-server": "cross-env APP_URL=http://localhost:3000/app/ df-dev-server",
    "dev-app": "vite --port 3000",
    "build": "cross-env-shell PUBLIC_URL=https://cdn.jsdelivr.net/npm/@data-fair/app-charts@${npm_package_version}/dist \"npm run prepareBuild && vite build\"",
    "build-preview": "npm run prepareBuild && vite build",
    "build-staging": "npm run prepareBuild && cross-env-shell PUBLIC_URL=https://staging-koumoul.com/apps/charts/master/ \"vite build\"",
    "build-types": "df-build-types && ncp src/config/.type/resolved-schema.json public/config-schema.json",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "precommit": "npm run lint",
    "prepareBuild": "rimraf dist && npm run build-types",
    "prepublishOnly": "npm run build",
    "preview": "vite preview"
  },
  "files": [
    "/dist",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "@data-fair/lib-utils": "^1.6.1",
    "@data-fair/lib-vue": "^1.23.0",
    "@data-fair/lib-vuetify": "^1.11.0",
    "@vueuse/core": "^13.7.0",
    "chart.js": "^4.4.2",
    "chartjs-adapter-dayjs-4": "^1.0.4",
    "chartjs-plugin-datalabels": "^2.2.0",
    "chroma-js": "^3.1.2",
    "dayjs": "^1.11.13",
    "natural-orderby": "^3.0.2",
    "ofetch": "^1.3.3",
    "vue": "^3.4.15",
    "vue-chartjs": "^5.3.0",
    "vuetify": "^3.7.4"
  },
  "devDependencies": {
    "@data-fair/dev-server": "^2.0.21",
    "@data-fair/lib-types-builder": "^1.6.0",
    "@types/node": "^20.11.29",
    "@vitejs/plugin-vue": "^6.0.0",
    "babel-preset-vue": "^2.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "eslint-plugin-vue": "^10.2.0",
    "eslint-plugin-vuetify": "^2.5.2",
    "json-schema-to-typescript": "^11.0.5",
    "ncp": "^2.0.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.70.0",
    "sass-loader": "^14.1.0",
    "typescript": "^5.3.3",
    "unplugin-fonts": "^1.1.1",
    "vite": "npm:rolldown-vite@^7.0.0",
    "vite-plugin-vuetify": "^2.1.1"
  }
}
